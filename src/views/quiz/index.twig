{% extends 'layouts/_default.twig' %}

{% block main_content %}
    <ul>
        {% for quiz in quizzes %}
            <li>
                {{ quiz.name }} - 
                <a href="/quizzes/{{ quiz.id }}/edit">Edit</a>
                 |
                <a href="/quizzes/{{ quiz.id }}/delete">Delete</a>
                |
                <a href="/quizzes/{{ quiz.id }}">Show</a>
            </li>
        {% endfor %}
    </ul>
    <p>
        <a href="/quizzes/new">Create New Quiz</a>
    </p>

    <a href="/questions">View Questions</a>
    |
    <a href="/choices">View Choices</a>
{% endblock %}