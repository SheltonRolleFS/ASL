{% if quiz %}
    <form action="/quizzes/{{ quiz.id }}" method="POST">
{% else %}
    <form action="/quizzes" method="POST">
{% endif %}

        <div>
            <label for="name">Name: </label>
            {% if quiz %}
                <input type="text" id="name" name="name" value="{{ quiz.name }}" />
            {% else %}
                <input type="text" id="name" name="name" />
            {% endif %}
        </div>
        <div>
            <label for="weight">Weight: </label>
            {% if quiz %}
                <input type="number" id="weight" name="weight" value="{{ quiz.weight }}" />
            {% else %}
                <input type="number" id="weight" name="weight" />
            {% endif %}
        </div>

        <input type="submit" value="Save Quiz" />
        <a href="/quizzes">Cancel</a>
    </form>

